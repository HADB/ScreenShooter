{
    "name": "Screenshooter",
    "version": "0.1",
    "description": "Newegg Screenshot extension",
    "icons": {
        "16": "img/icon16.png",
        "32": "img/icon32.png",
        "48": "img/icon48.png",
        "128": "img/icon128.png",
        "256": "img/icon256.png"
    },
    "background": {
        "persistent": false,
        "scripts": [ "js/background.js" ]
    },
    "browser_action": {
        "default_icon": "img/icon19.png",
        "default_popup": "popup.html",
        "default_title": "Take a screenshot & Email!"
    },
    "permissions": [ "tabs", "<all_urls>", "activeTab" ],
    "manifest_version": 2,
    "minimum_chrome_version": "6.0"
}
