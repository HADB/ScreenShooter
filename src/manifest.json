{
    "name": "Screenshooter",
    "version": "0.1",
    "description": "Newegg Screenshot extension",
    "icons": {
        "16": "resources/local/img/icon16.png",
        "32": "resources/local/img/icon32.png",
        "48": "resources/local/img/icon48.png",
        "128": "resources/local/img/icon128.png",
        "256": "resources/local/img/icon256.png"
    },
    "background": {
        "page": "pages/background.html"
    },
    "browser_action": {
        "default_icon": "resources/local/img/icon19.png",
        "default_popup": "pages/popup.html",
        "default_title": "Take a screenshot & Email!"
    },
    "permissions": [ "tabs", "<all_urls>", "activeTab" ],
    "manifest_version": 2,
    "minimum_chrome_version": "6.0"
}
